<h4>カテゴリ一覧・追加</h4>

<div class="mt-5 col-9 mx-auto">

  <div>
    <%= form_with model: @category, url: "/admin/categories", local:true do |f| %>
      <%= f.label :カテゴリ名, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
      <div class="text-center">
        <%= f.submit "カテゴリ追加", class: "btn btn-success mt-3" %>
      </div>
    <% end %>
  </div>

  <table class="table mt-5">
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td>
            <%= link_to admin_items_path(category_id: category.id) do %>
              <%= category.name %>
            <% end %>
          </td>
          <td>
            <%= link_to "編集", edit_admin_category_path(category), class: "btn btn-primary" %>
            <%= link_to "削除", "/admin/categories/#{category.id}", method: :delete, class: "btn btn-danger ml-3" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

