<h4>カテゴリ編集</h4>

<div class="mt-5 col-9 mx-auto">

  <div>
    <%= form_with model: @category, url: "/admin/categories/#{@category.id}", local:true do |f| %>
      <%= f.label :カテゴリ名, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
      <div class="text-center">
        <%= f.submit "変更する", class: "btn btn-success mt-3" %>
      </div>
    <% end %>
  </div>

</div>