<h4>顧客一覧</h4>
<table class="table mt-5">
  <thead>
    <tr>
      <td>顧客ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer) do %>
            <%= customer.last_name %> <%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td><%= customer.is_active %></td>
      </tr>
    <% end %>
  </tbody>
</table>
