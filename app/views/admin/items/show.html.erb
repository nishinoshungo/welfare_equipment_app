<h1>商品詳細ページ</h1>
<%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpg' %>
<table>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>レンタル料金</td>
      <td><%= @item.price %>円</td>
    </tr>
    <tr>
      <td>在庫数</td>
      <td><%= @item.stock %></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td><%= @item.is_active %></td>
    </tr>
  </tbody>
</table>
<%= link_to "編集する", edit_admin_item_path(@item) %>