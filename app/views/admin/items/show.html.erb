<h4>商品詳細ページ</h4>
<div class="row mt-5">
  <div class="col">
    <div class="text-center">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpg' %>
    </div>
  </div>
  <div class="col">
    <table class="table">
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>レンタル料金</td>
          <td><%= @item.price.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <td>在庫数</td>
          <td><%= @item.stock %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td><%= @item.is_active %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div>
  <h5 class="mb-3 mt-5">商品カテゴリ</h5>
  <% @item.categories.each do |category| %>
    <p>◯ <%= category.name %></p>
  <% end %>
</div>

<div class="text-center">
  <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
</div>