<h1>商品一覧</h1>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>レンタル価格</th>
      <th>在庫数</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= attachment_image_tag item, :image, :fill, 30, 30, format: 'jpg' %><%= link_to item.name, admin_item_path(item) %></td>
        <td><%= item.price %>円</td>
        <td><%= item.stock %></td>
        <td><%= item.is_active %></td>
      </tr>
    <% end %>
  </tbody>
</table>
