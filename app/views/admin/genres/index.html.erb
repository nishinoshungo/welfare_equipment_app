<h4>ジャンル一覧・追加</h4>

<div class="mt-5 col-9 mx-auto">
  <!--ジャンルの追加-->
  <div>
    <%= form_with model: @genre, url: '/admin/genres', local:true do |f| %>
      <%= f.label :ジャンル名, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
      <div class="text-center">
        <%= f.submit "ジャンル追加", class: "btn btn-success mt-3" %>
      </div>
    <% end %>
  </div>

  <!--ジャンル一覧表示-->
  <table class="table mt-5">
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to admin_items_path(genre_id: genre.id) do %>
              <%= genre.name %>
            <% end %>
          </td>
          <td>
            <%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>