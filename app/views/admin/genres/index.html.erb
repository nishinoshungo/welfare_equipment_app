<h1>ジャンル一覧</h1>
<%= form_with model: @genre, url: '/admin/genres', local:true do |f| %>
  <label>ジャンル名</label>
  <%= f.text_field :name %>
  <%= f.submit "登録" %>
<% end %>

<table class="table table-borderless">
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集", edit_admin_genre_path(genre) %></td>
      </tr>
    <% end %>
  </tbody>
</table>