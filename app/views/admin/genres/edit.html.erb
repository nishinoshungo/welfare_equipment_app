<h4>ジャンル編集</h4>

<div class="mt-5 col-9 mx-auto">
  <div>
    <%= form_with model: @genre, url: "/admin/genres/#{@genre.id}", local:true do |f| %>
      <%= f.label :ジャンル名, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
      <div class="text-center">
        <%= f.submit "変更する", class: "btn btn-success mt-3" %>
      </div>
    <% end %>
  </div>
</div>