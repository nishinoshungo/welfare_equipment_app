<h1>新規会員登録</h1>
<%= form_with model: @customer, url: '/customers', id: 'new_customer', class: 'new_customer', local:true do |f| %>
  <%= render "devise_customers/shared/error_messages", resource: resource %>

  <table>
    <tbody>
      <tr>
        <td><%= f.label :名前 %></td>
        <td><%= f.text_field :last_name, placeholder: "姓", autofocus: true %> <%= f.text_field :first_name, placeholder: "名" %></td>
      </tr>
      <tr>
        <td><%= f.label :フリガナ %></td>
        <td><%= f.text_field :last_name_kana, placeholder: "セイ" %> <%= f.text_field :first_name_kana, placeholder: "メイ" %></td>
      </tr>
      <tr>
        <td><%=f.label :メールアドレス %></td>
        <td><%= f.text_field :email, size: 30 %></td>
      </tr>
      <tr>
        <td><%=f.label :"郵便番号(ハイフンなし)" %></td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td><%=f.label :住所 %></td>
        <td><%= f.text_field :address, size: 60 %></td>
      </tr>
      <tr>
        <td><%=f.label :"電話番号(ハイフンなし)" %></td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td><%=f.label :介護保険負担割合 %></td>
        <td><%= f.select :burden_ratio, [["1割負担", "1割負担"], ["2割負担", "2割負担"], ["3割負担", "3割負担"], ["10割負担", "10割負担"]] %></td>
      </tr>
      <tr>
        <td><%=f.label :パスワード %></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.label :"パスワード(確認用)" %></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
    </tbody>
  </table>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
    <%= category.check_box %>
    <%= category.text %>
  <% end %>
  <%= f.submit "新規登録" %>
<% end %>

<%= render "devise_customers/shared/links" %>
