<h4>ご入力内容確認</h4>

<table class="table table-borderless">
  <tbody>
    <tr>
      <td>お名前</td>
      <td><%= @contact.name %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @contact.email %></td>
    </tr>
    <tr>
      <td>件名</td>
      <td><%= @contact.subject %></td>
    </tr>
    <tr>
      <td>メッセージ</td>
      <td><%= @contact.message %></td>
    </tr>
  </tbody>
</table>

<%= form_with model: @contact, url: contact_create_path, local:true do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :subject %>
  <%= f.hidden_field :message %>
  <div><%= f.submit '送信' %></div>
<% end %>

<%= form_with model: @contact, url: contact_back_path, local:true do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :subject %>
  <%= f.hidden_field :message %>
  <div><%= f.submit '入力画面に戻る' %></div>
<% end %>