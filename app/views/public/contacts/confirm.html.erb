<h4>ご入力内容確認</h4>

<div class="col-8 mx-auto mt-5">
  <table class="table">
    <tbody>
      <tr>
        <td>お名前</td>
        <td><%= @contact.name %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @contact.email %></td>
      </tr>
      <tr>
        <td>件名</td>
        <td><%= @contact.subject %></td>
      </tr>
      <tr>
        <td>メッセージ</td>
        <td><%= @contact.message %></td>
      </tr>
    </tbody>
  </table>
  <div class="d-flex justify-content-around mt-5">
    <%= form_with model: @contact, url: contact_create_path, local:true do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :subject %>
      <%= f.hidden_field :message %>
      <div><%= f.submit '送信', class: "btn btn-success" %></div>
    <% end %>
    <%= form_with model: @contact, url: contact_back_path, local:true do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :subject %>
      <%= f.hidden_field :message %>
      <div><%= f.submit '入力画面に戻る', class: "btn btn-primary" %></div>
    <% end %>
  </div>
</div>