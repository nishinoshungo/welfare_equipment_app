<div class="col-3">
    <div class="row d-flex justify-content-center">
      <div class="col-11">
        <table class="table table-borderless shadow-sm"  style="background-color: #FFFFFF;">
          <thead>
            <tr>
              <th>ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
            <% genres.each do |genre| %>
              <tr>
                <td class="genre-name">
                  <%= link_to items_path(search: "genre", id: genre.id) do %>
                    <%= genre.name %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>