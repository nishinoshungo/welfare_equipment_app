<p><%= current_customer.last_name %>様へのオススメ</p>
<% current_customer.categories.each do |category| %>
  <p><%= category.name %>方にオススメ</p>
  <% category.items.each do |item| %>
    <%= link_to "/item/#{item.id}" do %>
      <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpg' %>
    <% end %>
    <%= item.name %>
    <%= item.price %>
  <% end %>
<% end %>