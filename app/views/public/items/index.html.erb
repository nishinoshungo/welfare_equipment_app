<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to items_path(search: "genre", id: genre.id) do %>
          <%= genre.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h4><%= @title %>一覧</h4>
<% @items.each do |item| %>
  <%= link_to "/items/#{item.id}" do %>
    <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpg' %>
  <% end %>
  <%= item.name  %>
  <%= item.price %>円
<% end %>
