<h4>ご注文履歴</h4>
<table class="table mt-5">
  <thead>
    <tr>
      <th>ご注文日</th>
      <th>ご注文商品</th>
      <th>合計金額</th>
      <th>ご負担額</th>
      <th>ご注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.to_s(:datetime_jp) %></td>
        <td>
          <% order.order_items.each do |order_item| %>
            <%= order_item.item.name %><br>
          <% end %>
        </td>
        <td><%= total_price(order.order_items).to_s(:delimited) %></td>
        <td><%= copayment(total_price(order.order_items), current_customer) %></td>
        <td><%= link_to "表示する", "/orders/#{order.id}", class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>